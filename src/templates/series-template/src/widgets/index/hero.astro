---
import { getEntry } from "astro:content";

const hero = await getEntry("hero", "hero");
const { date, title, description, backgroundImageLeft, backgroundImageRight } =
  hero.data;
---

<section class="relative flex flex-col sm:h-screen sm:max-h-[770px]">
  <!-- Мобильная версия -->
  <div class="sm:hidden flex flex-col">
    <!-- Верхняя часть с фоном и заголовком -->
    <div
      class="relative h-[460px] flex items-center justify-center"
      style={`background-image: url(${backgroundImageLeft.src});`}
    >
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-[42px] font-bold text-white leading-tight mb-8">
          <span class="text-secondary text-8xl">ИГРА</span>
          <span class="block text-3xl">В КАЛЬМАРА 2</span>
        </h1>

        <div class="inline-block border border-white/30 rounded px-6 py-2">
          <div class="text-secondary text-sm mb-1">Премьера</div>
          <time datetime="2024-12-26" class="text-white text-xl">
            {date}
          </time>
        </div>
      </div>
    </div>

    <!-- Нижняя часть с описанием -->
    <div class="bg-[#1A222B] px-4 py-8">
      <p class="text-white/80 text-base leading-relaxed">
        {description}
      </p>
    </div>
  </div>

  <!-- Десктопная версия -->
  <div class="hidden sm:block relative flex-grow">
    <!-- Фоновые изображения -->
    <div class="absolute inset-0 flex">
      <div
        class="w-1/2 bg-cover bg-center bg-no-repeat"
        style={`background-image: url(${backgroundImageLeft.src});`}
      >
      </div>
      <div
        class="w-1/2 bg-cover bg-center bg-no-repeat"
        style={`background-image: url(${backgroundImageRight.src});`}
      >
      </div>
    </div>

    <!-- Контент -->
    <div
      class="relative z-10 container mx-auto px-4 h-full flex items-center justify-center"
    >
      <div class="max-w-2xl text-center">
        <time datetime="2024-12-26" class="text-white/90 text-sm block mb-4">
          {date}
        </time>

        <h1 class="text-6xl font-bold text-white mb-6">
          {title}
        </h1>

        <p class="text-white/90 text-lg leading-relaxed mx-auto">
          {description}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  [style*="background-image"] {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: top center;
  }
</style>
